<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_dlg_top_lay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/setting_header">
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Parent Control"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/search_dlg_top_lay"
        android:layout_marginTop="3sp"
        android:background="@drawable/setting_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10sp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0sp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="Password:"
                    android:layout_height="50sp"
                    android:layout_weight="0.5"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parent_edit_bg">

                    <EditText
                        android:id="@+id/txt_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:paddingLeft="8dp"
                        android:lines="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10sp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0sp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="New Password:"
                    android:layout_height="50sp"
                    android:layout_weight="0.5"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parent_edit_bg">
                    <EditText
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:paddingLeft="8dp"
                        android:lines="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10sp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0sp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="Confirm Password:"
                    android:layout_height="50sp"
                    android:layout_weight="0.5"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:background="@drawable/parent_edit_bg">

                    <EditText
                        android:id="@+id/txt_pass_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:maxLength="4"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="8dp"
                        android:lines="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded">
            <Button
                android:layout_marginEnd="20sp"
                android:layout_toStartOf="@+id/btn_cancel"
                android:id="@+id/btn_ok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/ok"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton">
                <requestFocus />
            </Button>
            <Button
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_cancel"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>