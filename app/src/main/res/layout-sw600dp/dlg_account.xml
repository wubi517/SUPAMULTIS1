<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_dlg_top_lay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/setting_header">
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/search_dlg_top_lay"
        android:layout_marginTop="3sp"
        android:background="@drawable/setting_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Username:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="user"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Account state:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_active"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Active"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Expire date:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_expire"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2018-6-13"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Is Trial:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_trial"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Active Connections:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_connection"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Created At:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_created"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2018-11-13"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Max Connections:"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_max"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textColor="@color/welcome_color"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>