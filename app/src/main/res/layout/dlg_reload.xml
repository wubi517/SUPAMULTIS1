<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="150sp">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_dlg_top_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/setting_header">
        <TextView
            android:id="@+id/search_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Reload portal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/setting_header"
        android:layout_below="@+id/search_dlg_top_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Would you like to reload portal?"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="10dp"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/parent_edit_bg">
                <EditText
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_new_portal"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:lines="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="7sp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/ok"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton">
                <requestFocus />
            </Button>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_marginEnd="20sp"
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.TextButton">
            </Button>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>